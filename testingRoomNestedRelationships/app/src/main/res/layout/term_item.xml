<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/term_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/term_end_date"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/term_start_date"
            android:ellipsize="end"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/term_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Start Date"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/term_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/term_start_date"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@id/term_start_date"
            android:layout_toEndOf="@id/term_title"
            android:text="End Date"
            android:textAppearance="@style/TextAppearance.AppCompat" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>